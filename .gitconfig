[core]
    editor = nvim
    pager = delta

[user]
    email = clemfou@email.com
    name = clemfou

[init]
    defaultBranch = master

[merge]
    conflictstyle = diff3

[interactive]
    diffFilter = delta --color-only

[log]
    date = iso-local

[diff]
    colorMoved = default

[color "diff"]
    newMovedAlternative = bold brightblue "#004000"
    newMoved = bold brightblue "#004000"
    oldMovedAlternative = bold brightmagenta "#400000"
    oldMoved = bold brightmagenta "#400000"

[alias]
    l = log --pretty=format:'%C(yellow)%h%Creset %C(cyan)%ad%Creset %C(bold blue)%an%Creset %C(auto)%s%Creset'
    st = status

[delta]
    blame-format = "{author:<18} ({commit:>7}) ┊{timestamp:^16}┊ "
    blame-palette = "#101010 #200020 #002800 #000028 #202000 #280000 #002020 #002800 #202020"
    commit-decoration-style = none
    commit-style = bold italic
    dark = true
    file-added-label = [+]
    file-copied-label = [==]
    file-decoration-style = "#606018" overline
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    file-style = 232 bold 184
    hunk-header-decoration-style = none
    hunk-header-style = syntax bold italic
    line-numbers-left-format = "{nm:>1}┊"
    line-numbers-left-style = red
    line-numbers-minus-style = red italic black
    line-numbers-plus-style = green italic black
    line-numbers-right-format = "{np:>1}┊"
    line-numbers-right-style = green
    line-numbers = true
    line-numbers-zero-style = "#545474" italic
    minus-emph-style = syntax bold "#780000"
    minus-style = syntax "#400000"
    plus-emph-style = syntax bold "#007800"
    plus-style = syntax "#004000"
    whitespace-error-style = 9 reverse
    zero-style = syntax
